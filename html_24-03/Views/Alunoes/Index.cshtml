@model IEnumerable<html_24_03.Models.Aluno>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Administrar alunos</h1>

<p>
    <a asp-action="Create">Cadastrar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.alunoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.alunoCurso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.alunoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alunoCurso.cursoNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.alunoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.alunoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.alunoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
